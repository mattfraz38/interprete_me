
<div class="info-container">

  <div class="info-content">
    <h3>Name <i class="fas fa-user"></i></h3>
<%= @user.name %>

</div>

<div class="info-content">
  <h3>About</h3>
<%= @user.bio %>
</div>

<div class="info-content">
 <h3>Gender <i class="fas fa-transgender-alt"></i></h3>
<%= @user.gender %>
</div>

</div>



<div class="service-container">

   <% @user.services.each do |s| %>

    <div class="card-service">

    <div class="service">
      <h2><%= s.title %><h2>
    </div>

    <div class="service">
      <h4>Price</h4>
       <p> $<%= s.price %></p>
    </div>

    <div class="service">
      <h4>Description </h4>
      <p> <%= s.description%></p>

    </div>


     <div class="service">
      <h4>City</h4>
      <p><%= s.location %></p>

    </div>

  </div>
  <% end %>
<%= link_to "Create a New Service", new_service_path %>
</div>
