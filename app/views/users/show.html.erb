
<div class="info-container">

  <div class="profile-container">
    <div class="profile-avatar">
      <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="avatar-bordered"/>
      <h4><%= @user.name %></h4>
      <p><strong><%= @user.gender %></strong></p>
    </div>
    <div class="profile-bio">
      <p> <strong>About Me</strong> </p>
      <p><%= @user.bio %></p>
    </div>
  </div>
</div>



<div class="tab">
  <button class="tablinks" onclick="openCity(event, 'services-hosted')" id="defaultOpen">Services Hosted (<%= @user.services.count %>)</button>
  <button class="tablinks" onclick="openCity(event, 'hosting-appointments')">Appointments Hosting</button>
  <button class="tablinks" onclick="openCity(event, 'attending-appointments')">Appointments Attending</button>
</div>

<!-- Tab content -->
<div id="services-hosted" class="tabcontent">
  <div class="service-container">
    <div class="new-service-btn">
      <%= link_to "Create a Service", new_service_path %>
    </div>
    <div class="card-service-header">
        <div class="service">
          <h2>SERVICE<h2>
        </div>
        <div class="service">
          <h2>PRICE</h2>
        </div>
        <div class="service">
          <h2>DESCRIPTION </h2>
        </div>
         <div class="service">
          <h2>CITY</h2>
        </div>
    </div>
   <% @user.services.each do |s| %>
    <div class="card-service">
      <div class="service">
        <h3><%= s.title %></h3>
      </div>
      <div class="service">
         <h3>$<%= s.price %></h3>
      </div>
      <div class="service">
        <h3> <%= s.description%></h3>
      </div>
       <div class="service">
        <h3><%= s.location %></h3>
      </div>
    </div>
  <% end %>
</div>


</div>

<div id="attending-appointments" class="tabcontent">
  <div class="card-service-header">
    <div class="service">
      <h2>HOST NAME<h2>
    </div>
    <div class="service">
      <h2>EXPERIENCE</h2>
    </div>
    <div class="service">
      <h2>START DATE</h2>
    </div>
     <div class="service">
      <h2>END DATE</h2>
    </div>
</div>
  <div class="service-container">
    <% @user.appointments.each do |a| %>
      <div class="card-service">
        <div class="service">
          <h3><%= link_to a.service.user.name, user_path(a.service.user) %></h3>
        </div>
        <div class="service">
           <h3><%= a.service.title %></h3>
        </div>
        <div class="service">
          <h3><%= a.start_day%></h3>
        </div>
         <div class="service">
          <h3><%= a.end_day %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="hosting-appointments" class="tabcontent">
  <div class="card-service-header">
    <div class="service">
      <h2>HOST NAME<h2>
    </div>
    <div class="service">
      <h2>EXPERIENCE</h2>
    </div>
    <div class="service">
      <h2>START DATE</h2>
    </div>
     <div class="service">
      <h2>END DATE</h2>
    </div>
</div>
  <div class="service-container">
    <% @user.appointments.each do |a| %>
      <div class="card-service">
        <div class="service">
          <h3><%= a.service.user.name %></h3>
        </div>
        <div class="service">
           <h3><%= a.service.title %></h3>
        </div>
        <div class="service">
          <h3><%= a.start_day%></h3>
        </div>
         <div class="service">
          <h3><%= a.end_day %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>




