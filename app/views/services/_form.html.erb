<%= simple_form_for [@service] do |f| %>
  <%= f.input :title, :input_html => { :wrap => :soft, :rows => 2} %>
  <%= f.input :category %>
  <%= f.input :location %>
  <%= f.input :language %>
  <%= f.input :description %>
  <%= f.input :days %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Submit" %>
<% end %>
