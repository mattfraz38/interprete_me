<div class="card_container">
  <div class="card_form">
    <h2 class = "blue">Edit Experience</h2>
    <%= simple_form_for [@service], method: :patch do |f| %>
      <%= f.input :title, :input_html => { :wrap => :soft, :rows => 2} %>
      <%= f.input :category %>
      <%= f.input :location %>
      <%= f.input :language %>
      <%= f.input :description %>
      <%= f.input :days, :label => "Duration (Hours)"  %>
      <%= f.input :price %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Submit" %>
    <% end %>

  </div>
</div>

