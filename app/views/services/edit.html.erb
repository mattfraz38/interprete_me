<div class="card_container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1 class = "blue">Edit Experience</h1>
      <div class="card_form">
        <%= simple_form_for [@service], method: :patch do |f| %>
          <%= f.input :title, :input_html => { :wrap => :soft, :rows => 2} %>
          <%= f.input :category %>
          <%= f.input :location %>
          <%= f.input :language %>
          <%= f.input :description %>
          <%= f.input :days %>
          <%= f.input :price %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Submit", :class => "service-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>